@font-face
	font-family "fontello"
	src url("../fonts/fontello.woff") format('woff')

@import url("http://fonts.googleapis.com/css?family=Montserrat");
@import url("http://fonts.googleapis.com/css?family=Lato:400,400italic,700,700italic|Source+Code+Pro:400");
@import url("http://fonts.googleapis.com/css?family=Roboto");

body
	padding 80px 0 0 0

#esquema
	background #333
	color white
	text-shadow 2px 2px 5px #000
	&, div, div div
		padding 10px
		margin 10px
	div
		background #777
		div:nth-child(2)
			background yellow
		div:nth-child(3)
			background orange
		div:nth-child(4)
			background red
		div:nth-child(5)
			background purple
		div:nth-child(6)
			background blue
		
#integrantes
	min-height 100%
	min-width 100%
	padding 50px 0
	text-align center
	h2
		color #333
		font-family 'Montserrat', sans-serif
		font-weight bold
		padding 10px 0
		text-align center
	h4
		margin 30px 0
	article
		background rgba(0,0,0,0.4)
		color #fff
		display inline-block
		font-size 17px
		height 130px
		margin 10px
		overflow hidden
		padding 10px
		width 280px
		-moz-transition all 0.8s ease-in-out
		-ms-transition all 0.8s ease-in-out
		-o-transition all 0.8s ease-in-out
		-webkit-transition all 0.8s ease-in-out
		transition all 0.8s ease-in-out
		&:hover
			background rgba(255,255,255,0.6)
			color #444
			font-weight bold
			text-transform uppercase
		.negrita
			font-family 'Montserrat', sans-serif
			color #000
			font-size 14px
	.face
		&::before
			content "\e838"
			font-family "fontello"
	& > div
		background rgba(0,0,0,0.4)
		color #fff
		font-weight bold
		margin-top 20px
		margin 0 auto
		padding 10px
		width 150px
		&:hover
			background rgba(255,255,255,0.6)
			color #444
		& > p
			margin 0
